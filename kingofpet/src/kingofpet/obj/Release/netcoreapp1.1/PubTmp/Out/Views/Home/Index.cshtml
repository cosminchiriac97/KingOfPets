@{
    ViewData["Title"] = "Home Page";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/js/user-page.js"></script>
</head>

<div class="main-container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/kittens-cat-cat-puppy-rush-45170.jpeg" alt="pets 1" class="img-responsive" />
            </div>
            <div class="item">
                <img src="~/images/pexels-photo-24104.jpg" alt="pets 2" class="img-responsive" />
            </div>
            <div class="item">
                <img src="~/images/pexels-photo-169606.jpeg" alt="pets 3" class="img-responsive" />
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container">
        <div class="follow-btn">
            <h3>Follow us!</h3>
            <div class="follow-list">
                <a class="facebook-logo" href="https://www.facebook.com/kingopetUSA/"></a>
                <a class="twitter-logo" href="https://twitter.com/kingopet"></a>
                <a class="instagram-logo" href="https://www.instagram.com/kingopet/"></a>
                <a class="pinterest-logo" href="https://ro.pinterest.com/kingopet/pins/"></a>
                <a class="tumbler-logo" href="https://kingopet.tumblr.com/"></a>
            </div>
        </div>

        <div class="row">
            <div class="newsletter col-xs-12">
                <h3>To become a loyal customere enter your email here:</h3>


                <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Email address" required="">
                <div class="clear"><input type="submit" value="" name="subscribe" id="mc-embedded-subscribe" class="button"></div>

                <span class="glyphicon glyphicon-menu-right arrow-right"></span>

                <div class="contact">
                    <p>Contact us: <a href="mailto:office@kingopet.com" >office@kingopet.com</a></p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="separator col-xs-12"></div>
        </div>
    </div>
    <footer>
        <div class="footer-content">
            <p>&copy; 2017 - kingopet</p>
        </div>
    </footer>
</div>